<h1>All Players</h1>

<table>   
   <tbody>
      <% @players.each do |player| %>
         <tr>
            <td><%= player.position %></td>
               <% if player.not_defense %>
                  <td style="padding: 0 10px 0 0"><%= link_to player.last_name + ", " + player.first_name, edit_player_path(player) if current_user.email == "barosengarten@gmail.com" %></td>
                  <td style="padding: 0 10px 0 0"><%= link_to player.last_name + ", " + player.first_name, player_path(player) if current_user.email != "barosengarten@gmail.com" %></td>
               <% else %>
                  <td style="padding: 0 10px 0 0"><%= link_to player.first_name + " " + player.last_name, edit_player_path(player) if current_user.email == "barosengarten@gmail.com" %></td>
                  <td style="padding: 0 10px 0 0"><%= player.first_name + " " + player.last_name if current_user.email != "barosengarten@gmail.com" %></td>
               <% end %>
               <% if player.team_id == 0 %>
                     <td><%= link_to "Free Agent", free_agents_path %></td>
                  <% else %>
                     <td><%= link_to player.team.full_name, user_path(player.user) %></td>
               <% end %>
         </tr>
      <% end %>
   </tbody>
</table>
<br><br>
<%= link_to "Create Player", new_player_path if current_user.email == "barosengarten@gmail.com" %>