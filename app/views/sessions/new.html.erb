<h1>Welcome to Fantasy Football League</h1>

<h3>Log In</h3>
<%= form_tag("/login", method: "post") do %>
  <%= email_field_tag :email, nil, placeholder: "Email" %>
  <%= password_field_tag :password, nil, placeholder: "Password" %><br><br>
  <%= submit_tag "Log In" %><br><br>

  <%= link_to('Log in with Facebook', '/auth/facebook') %><br><br><br>

  Don't have an account? <%= link_to "Sign up", new_user_path %>
<% end %>