<h1>All Players</h1>
<% @players.each do |player| %>
   <%= player.position %>
   <% if current_user.email == "barosengarten@gmail.com" %>
      <%= link_to player.last_name + ", " + player.first_name, edit_player_path(player) %>
   <% else %>
      <% if player.not_defense %>
         <%= link_to player.last_name + ", " + player.first_name, player.espn_page, target: :blank %>
      <% else %>
         <%= player.first_name + " " + player.last_name %>
      <% end %>
   <% end %>
        <%= " - " %>
        <% if player.team_id == 0 %>
            <%= link_to "Free Agents", free_agents_path %><br>
         <% else %>
            <%= link_to player.team.full_name, user_path(player.user) unless player.team_id == 0 %><br>
        <% end %>
<% end %>
<br><br>
<%= link_to "Create Player", new_player_path if current_user.email == "barosengarten@gmail.com" %>