<h1>All Players</h1>
<% @players.each do |player| %>
   <%= player.position %>
      <% if player.not_defense %>
         <%= link_to player.last_name + ", " + player.first_name, edit_player_path(player) if current_user.email == "barosengarten@gmail.com" %>
         <%= link_to player.last_name + ", " + player.first_name, player.espn_page, target: :blank if current_user.email != "barosengarten@gmail.com" %>
      <% else %>
         <%= link_to player.first_name + " " + player.last_name, edit_player_path(player) if current_user.email == "barosengarten@gmail.com" %>
         <%= player.first_name + " " + player.last_name if current_user.email != "barosengarten@gmail.com" %>
      <% end %>
        <%= " - " %>
        <% if player.team_id == 0 %>
            <%= link_to "Free Agent", free_agents_path %><br>
         <% else %>
            <%= link_to player.team.full_name, user_path(player.user) %><br>
        <% end %>
<% end %>
<br><br>
<%= link_to "Create Player", new_player_path if current_user.email == "barosengarten@gmail.com" %>